    "@types/node": "^24.10.0",
    "@types/react": "^18.0.33",
    "@types/react-dom": "^18.0.11",
    "@types/spark-md5": "^3.0.4",
    "@types/turndown": "^5.0.6",
    "@umijs/plugins": "^4.5.3",
    "cross-env": "^10.1.0",
    "eslint": "^9.39.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.6",
    "openapi-tool": "^0.4.12",
    "prettier": "^3.6.2",
    "typescript": "^5.0.3"

{
  "private": true,
  "author": "devin <wzh.devin@gmail.com>",
  "scripts": {
    "dev": "umi dev",
    "build": "umi build",
    "postinstall": "umi setup",
    "setup": "umi setup",
    "start": "cross-env API_ENV=dev umi dev",
    "start:debug": "cross-env API_ENV=dev NODE_OPTIONS='--inspect' umi dev",
    "start:prod": "cross-env API_ENV=prod umi dev",
    "lint": "eslint --ext .js,.jsx,.ts,.tsx src",
    "lint:fix": "eslint --ext .js,.jsx,.ts,.tsx src --fix",
    "format": "prettier --write \"src/**/*.{js,jsx,ts,tsx,json,css,less,scss,md}\""
  },
  "dependencies": {
    "@typescript-eslint/eslint-plugin": "^8.46.2",
    "@typescript-eslint/parser": "^8.46.2",
    "antd": "^5.28.0",
    "umi": "^4.5.3",
    "umi-request": "^1.4.0"
  },
  "devDependencies": {
    "@types/node": "^24.10.0",
    "@types/react": "^18.0.33",
    "@types/react-dom": "^18.0.11",
    "@umijs/plugins": "^4.5.3",
    "cross-env": "^10.1.0",
    "eslint": "^9.39.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.6",
    "openapi-tool": "^0.4.12",
    "prettier": "^3.6.2",
    "typescript": "^5.0.3"
  },
  "lint-staged": {
    "src/**/*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "src/**/*.{json,css,less,scss,md}": [
      "prettier --write"
    ]
  }
}
